<h2>Instance details</h2>

<table class='table table-bordered'>
  <tbody>
    <tr>
      <td>name</td>
      <td><%= @instance.name %></td>
    </tr>
    <tr>
      <td>ip_address</td>
      <td><%= @instance.ip_address %></td>
    </tr>
    <tr>
      <td>cpu_usage</td>
      <td><%= @instance.cpu_usage %></td>
    </tr>
    <tr>
      <td>disk_usage</td>
      <td><%= @instance.disk_usage %></td>
    </tr>
    <tr>
      <td>process count</td>
      <td><%= @instance.processes.count %></td>
    </tr>
  </tbody>
</table>

<h3>Processes</h3>

<table class='table table-bordered'>
  <thead>
    <tr>
      <th>name</th>
      <th>pid</th>
      <th>cpu_usage</th>
    </tr>
  </thead>
  <tbody>
    <% @instance.processes.each do |process| %>
      <tr>
        <td><%= process.name %></td>
        <td><%= process.pid %></td>
        <td><%= process.cpu_usage %></td>
      </tr>
    <% end %>
  </tbody>
</table>
